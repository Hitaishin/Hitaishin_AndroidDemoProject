<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/balak" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/RobotoMediumFonttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivUserProfile"
        android:maxLength="15"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/color_black_dark"
        android:textSize="13dp" />

    <view
        android:id="@+id/view"
        class="android.support.v7.widget.AppCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ivUserProfile"
        android:background="@color/color_home_ortv" />

</RelativeLayout>
